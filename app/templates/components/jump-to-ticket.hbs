<form {{! action 'jumpToTicket' on='submit'}}>
  <div class="form-group">
    <label for="ticket_id"></label>
    {{input value=ticket_id placeholder='Ticket Number' class='form-control'}}
  </div>
  {{#link-to 'ticket.show' ticket_id}}Go{{/link-to}}
  {{! <button type="submit" class="btn btn-default">Go</button> }}
</form>