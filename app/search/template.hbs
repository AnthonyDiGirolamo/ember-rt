<div id="layout" class="">
    <div id="nav" class="">
        <button class="nav-menu-button">Menu</button>

        <div class="nav-inner">

            <div class="nav-color">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="nav-icon-link hint--right" data-hint="Home">
                            {{#link-to 'search' }}
                                <i class="fa fa-ticket"></i>
                            {{/link-to}}
                        </div>
                        <div class="nav-icon-link">
                            {{#if session.isAuthenticated}}
                                <a class="" {{action 'invalidateSession'}}>
                                    <i class="fa fa-sign-out"></i>
                                </a>
                            {{else}}
                                <a class="hint--right" data-hint="Login" {{action "showModal" "login"}}>
                                    <i class="fa fa-sign-in"></i>
                                </a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="nav-color-darker">
                <div class="row">
                    <div class="nav-section clearfix">
                        <div class="col-sm-9">
                            Queries
                        </div>
                        <div class="col-sm-3 text-right">
                            <a class="" {{action "createNewSearch"}}>
                                <i class="fa fa-plus-circle"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                {{#each model as |search|}}
                    <div class="nav-item clearfix">
                        <div class="col-xs-8">
                            {{#link-to "search.show" search.id tagName="div" class="item-left-link" href=false}}
                                {{#link-to "search.show" search.id class=""}}
                                    {{search.name}}
                                {{/link-to}}
                            {{/link-to}}
                        </div>
                        <div class="col-xs-4 text-right">
                            <div class="item-right-link">
                                {{!link-to "search.edit" search.id class=""}}
                                    {{! <i class="fa fa-pencil"></i> }}
                                {{!link-to}}
                                <a class="" {{action "showModal" "search.edit" search}}>
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>

        </div>
    </div>

    {{outlet}}
</div>
